<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_back">

    <com.yiyuangou.android.one_yuan.zidingyi_view.logandreg
        android:id="@+id/login_topbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        lar:center_text="登    录"
        lar:left_but="@mipmap/login_left">
    </com.yiyuangou.android.one_yuan.zidingyi_view.logandreg>

    <com.yiyuangou.android.one_yuan.zidingyi_view.input_border
        android:id="@+id/login_phone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/login_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        lar:int_center="请输入您的手机号码"
        lar:int_lef="@mipmap/phone"
        lar:int_rig="@mipmap/delete"
        >
    </com.yiyuangou.android.one_yuan.zidingyi_view.input_border>
    <com.yiyuangou.android.one_yuan.zidingyi_view.input_border
        android:id="@+id/login_pwd"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        lar:int_center="请输入您的密码"
        lar:int_lef="@mipmap/pwd"
        lar:int_rig="@mipmap/delete"
        >
    </com.yiyuangou.android.one_yuan.zidingyi_view.input_border>
    <RelativeLayout
        android:id="@+id/login_4"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/login_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/login_forget"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="忘记密码？"/>
        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="新用户注册"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <Button
        android:id="@+id/login_submit"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/login_4"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="@color/white"
        android:text="登    录"
        android:textSize="14sp"
        android:background="@drawable/button_skin"

        />

    <RelativeLayout
    android:id="@+id/please_wait"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请稍等..."
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>

</RelativeLayout>







</RelativeLayout>