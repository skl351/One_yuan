<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yiyuangou.android.one_yuan.zidingyi_view.logandreg
        android:id="@+id/shouhuodizhi_topbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        lar:center_text="确认收货地址"
        lar:left_but="@mipmap/login_left">
    </com.yiyuangou.android.one_yuan.zidingyi_view.logandreg>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/add_adress"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/shouhuodizhi_scc"
        android:layout_below="@id/shouhuodizhi_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/shouhuodizhi_scs_line"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lijiduihuan"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即兑换"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/home_orange"/>



</RelativeLayout>