<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/weixin_share_top"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     <TextView
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:gravity="center"
         android:background="@color/home_orange"
         android:textSize="16sp"
         android:textColor="@color/white"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="请填写备注，并点击确认进行兑换"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <EditText
                android:id="@+id/beizhu"
                android:textSize="14sp"
               android:hint="请填写备注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weixin_share_top">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:textColor="@color/white"
                android:id="@+id/zengs_dialo_zhongjian_quxiao"
                android:layout_centerHorizontal="true"
                android:background="@color/gray"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="取消"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:textColor="@color/white"
                android:id="@+id/zengs_dialo_zhongjian_ok"
                android:layout_centerHorizontal="true"
                android:background="@color/home_orange"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="确认"/>
        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>