<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/hero_back">
    <RelativeLayout
        android:id="@+id/topter"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请开猜"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请金豆数："/>
            <TextView

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:id="@+id/sqjds"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:visibility="gone"
                android:textSize="12sp"
                android:background="@mipmap/jd1_fg"
                android:id="@+id/but_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:textSize="12sp"
                android:background="@mipmap/jd2_fg"
                android:visibility="gone"
                android:id="@+id/but_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:textSize="12sp"
                android:background="@mipmap/jd3_fg"
                android:visibility="gone"
                android:id="@+id/but_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:textSize="12sp"
                android:background="@mipmap/jd4_fg"
                android:visibility="gone"
                android:id="@+id/but_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textSize="12sp"
                android:background="@mipmap/jd5_fg"
                android:visibility="gone"

                android:id="@+id/but_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textSize="12sp"
                android:background="@mipmap/jd6_fg"
                android:visibility="gone"
                android:id="@+id/but_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              />
            <Button
                android:textSize="12sp"
                android:background="@mipmap/jd7_fg"
                android:visibility="gone"
                android:id="@+id/but_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:textSize="12sp"
                android:background="@mipmap/jd8_fg"
                android:visibility="gone"
                android:id="@+id/but_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请倍数："/>
            <RelativeLayout
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <Spinner
                    android:padding="0dp"
                    android:layout_margin="-20dp"
                    android:spinnerMode="dropdown"
                    android:id="@+id/sqsl"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连续竞猜："/>
            <RelativeLayout
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <Spinner
                    android:padding="0dp"
                    android:layout_margin="-20dp"
                    android:spinnerMode="dropdown"
                    android:id="@+id/sqlx"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/quxiao"
            android:background="@mipmap/hero_lol_orge"
            android:text="取        消"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
android:layout_marginLeft="5dp"
            android:id="@+id/ok"
            android:text="确定申请"
            android:textColor="@color/white"
            android:background="@mipmap/hero_lol_orge"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="1dp"></LinearLayout>

</LinearLayout>