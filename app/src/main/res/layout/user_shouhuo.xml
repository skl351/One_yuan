<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/youdianhui_back">
    <com.yiyuangou.android.one_yuan.zidingyi_view.logandreg
        android:id="@+id/shouhuo_topbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        lar:center_text="收货地址"
        lar:left_but="@mipmap/login_left">
    </com.yiyuangou.android.one_yuan.zidingyi_view.logandreg>
    <ScrollView
        android:id="@+id/shouhuodizhi_scs"
        android:layout_below="@id/shouhuo_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/shouhuodizhi_scs_line"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>
    </ScrollView>

    <TextView
    android:layout_below="@id/shouhuodizhi_scs"
    android:layout_centerHorizontal="true"
    android:id="@+id/shouhuo_add_place"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="添加新地址"
    android:textSize="20sp"
    android:textColor="@color/white"
    android:background="@color/home_orange"/>
    <RelativeLayout
        android:id="@+id/user_shuohuo_bianji"
        android:visibility="gone"
        android:layout_below="@id/shouhuo_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/user_shouhuodizhi2"
            />
    </RelativeLayout>





</RelativeLayout>