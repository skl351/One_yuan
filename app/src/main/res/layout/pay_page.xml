<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_back">
    <com.yiyuangou.android.one_yuan.zidingyi_view.logandreg
        android:id="@+id/pay_topbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        lar:center_text="支        付"
        lar:left_but="@mipmap/login_left">
    </com.yiyuangou.android.one_yuan.zidingyi_view.logandreg>
    <LinearLayout
        android:layout_below="@id/pay_topbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginTop="10dp"
           android:layout_gravity="center"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:layout_marginTop="10dp"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="竞猜第"
               android:textColor="@color/gray"
               android:textSize="16sp"
               />
           <TextView
               android:id="@+id/except"
               android:layout_marginTop="10dp"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="100"
               android:textColor="@color/gray"
               android:textSize="16sp"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="期"
               android:textColor="@color/gray"
               android:textSize="16sp"
               />
       </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额"
                android:layout_margin="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/zhifu_jd_1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金豆"
                android:layout_margin="5dp"
                android:textSize="14sp"/>
            <TextView

                android:id="@+id/pay_all_jd"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/zhifu_jd_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>

        </RelativeLayout>
        <TextView

            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择支付方式"
            android:textColor="@color/gray"
            android:textSize="16sp"
            />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金豆余额"
                android:layout_margin="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/zhifu_jd_t"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金豆"
                android:layout_margin="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/pay_all_jd_reltive"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/zhifu_jd_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/pay_now"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即支付"
        android:background="@drawable/button_skin"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"/>


</RelativeLayout>