<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yiyuangou.android.one_yuan.zidingyi_view.logandreg
        android:id="@+id/jigncai_click_topbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        lar:center_text="订单"
        lar:left_but="@mipmap/login_left">
    </com.yiyuangou.android.one_yuan.zidingyi_view.logandreg>
    //三个标题
    <LinearLayout
        android:id="@+id/dingdan_three"
        android:layout_below="@id/jigncai_click_topbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/gift_jiaohuan"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hero_text"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="英雄订单"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/jingcai"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kaicai_text"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开猜订单"
                android:textSize="16sp"/>


        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_below="@id/dingdan_three"
        android:id="@+id/dingdan_imgtap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/dingdan_tiaofu"
        />
    <android.support.v4.view.ViewPager
        android:layout_marginTop="5dp"
        android:layout_below="@id/dingdan_imgtap"
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>


</LinearLayout>