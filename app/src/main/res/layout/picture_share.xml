<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/pic_share_top"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/pic_share_top_friend"
            android:layout_margin="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/xitongxiangji"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"/>
        </LinearLayout>
        <ImageView
            android:layout_margin="20dp"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/pic_share_top_cried"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/xitongpic"/>

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统相册"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:background="#c9c9c9"
        android:layout_below="@id/pic_share_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/pic_no_do"
            android:layout_margin="3dp"
            android:text="取消"
            android:background="#d7d7d7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>




</RelativeLayout>