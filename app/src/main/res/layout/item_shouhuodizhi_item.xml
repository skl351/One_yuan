<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="75dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </RelativeLayout>
<RelativeLayout
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <TextView
        android:id="@+id/item_shouhuo_item_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/item_shouhuo_item_phone"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/item_shouhuo_item_dizhi"
        android:layout_below="@id/item_shouhuo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"/>
    <LinearLayout
        android:id="@+id/yitiaolin"
        android:layout_below="@id/item_shouhuo_item_dizhi"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shouhuodizhi_more"
            android:layout_margin="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/button_tiaokuan"/>
        <TextView
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:textColor="@color/gray"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/shouhuodizhi_delete"
        android:padding="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:background="@null"
        />
    <ImageView
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="15dp"
        android:layout_height="65dp"/>
    <ImageView
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:background="@mipmap/kaijiang"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </RelativeLayout>

</LinearLayout>