<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:background="@color/home_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认用户信息"
        android:textSize="16sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:id="@+id/zengs_dialo_zhongjian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="用户昵称："/>
            <TextView
                android:id="@+id/zengs_dialo_zhongjian_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="xxx"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="手机号："/>
            <TextView
                android:id="@+id/zengsong_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:text="18267913849"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zengs_dialo_zhongjian">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:textColor="@color/white"
                android:id="@+id/zengs_dialo_zhongjian_quxiao"
                android:layout_centerHorizontal="true"
                android:background="@color/gray"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="取消"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:textColor="@color/white"
                android:id="@+id/zengs_dialo_zhongjian_ok"
                android:layout_centerHorizontal="true"
                android:background="@color/home_orange"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="确定"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>