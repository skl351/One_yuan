<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.yiyuangou.android.one_yuan.zidingyi_view.logandreg
        android:id="@+id/shouhuo_topbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        lar:center_text="修改地址"
        lar:left_but="@mipmap/login_left">
    </com.yiyuangou.android.one_yuan.zidingyi_view.logandreg>
    <LinearLayout
        android:layout_below="@id/shouhuo_topbar"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/gray"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人姓名："/>
            <EditText
                android:id="@+id/shouhuodizhi_name"
                android:layout_margin="5dp"
                android:background="@null"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:hint="请输入收货人姓名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/gray"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码："/>
            <EditText
                android:id="@+id/shouhuodizhi_phone"
                android:layout_margin="5dp"
                android:background="@null"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:hint="请输入收货人手机号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/user_shouhuoZh_diqu"
                android:textColor="@color/gray"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省市区："/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/shouhuodizhi_diqu"
                android:layout_toRightOf="@id/user_shouhuoZh_diqu"
                android:layout_margin="5dp"
                android:background="@null"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/yonglaiclick_diqu"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/kaijiang"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/gray"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："/>
            <EditText
                android:id="@+id/shouhuodizhi_xiangxi_dizhi"
                android:layout_margin="5dp"
                android:background="@null"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:hint="请输入详细地址"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/shouhuodizhi_more"
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_tiaokuan"/>
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认地址"
                android:textColor="@color/gray"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/shouhuodizhi_save"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保  存"
            android:textSize="20sp"
            android:background="@color/home_orange"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>